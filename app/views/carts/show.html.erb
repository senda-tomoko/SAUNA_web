<h1>Your Cart</h1>

<% if @order.line_items.any? %>
  <table>
    <thead>
      <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Total</th>
      </tr>
    </thead>
    <tbody>
      <% @order.line_items.each do |item| %>
        <tr>
          <td><%= item.product.name %></td>
          <td><%= item.quantity %></td>
          <td><%= item.price %></td>
          <td><%= item.quantity * item.price %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h3>Total: <%= @order.total %></h3>
<% else %>
  <p>Your cart is empty.</p>
<% end %>
